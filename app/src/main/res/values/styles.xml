<resources>
    <color name="spots_dialog_color">@color/light_green</color>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextAppearance</item>
        <item name="popupMenuStyle">@style/CustomMenuTextAppearance</item>
    </style>
    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:cacheColorHint">@android:color/white</item>
    </style>
    <style name="PreferencesTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/gray</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColorSecondary">@color/colorSummary</item>
        <item name="android:textColorPrimary">@color/colorTitle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/gray</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>
    <style name="AboutTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="ProgressDialogTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ToolbarTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="PinnedCoinsTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="CustomProgressDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Small</item>
        <item name="DialogTitleText">@string/receiving_data</item>
        <item name="DialogSpotColor">@color/light_green</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="DialogSpotCount">8</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
</resources>
